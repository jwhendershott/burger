<div class='container eatBurger'>
  <div class='row'>
    <div class='col-12'>
  <h1>Eat the Burger</h1>
<div>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>

  <ul>
    {{#each burger}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
  </ul>
  </div>
  </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='addBurger col-12 '>
      <h2>Add a Burger</h2>
      <form id="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <button type="click" id='addBurger'>Add Burger</button>
        </div>
        <div class="form-group">
        </div>
      </form>
    </div>
  </div>
</div>